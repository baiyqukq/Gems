<?xml version="1.0" ?>
<states>
  <!-- The Main Menu State -->
  <state name="MainMenuState">
    <textures>
      <texture href="assets/playbutton.png" id="PlayButton" />
      <texture href="assets/exitbutton.png" id="ExitButton" />
    </textures>

    <objects>
      <object type="MenuButton" x="88" y="138" width="400" height="100" textureID="PlayButton" callbackID="0" />
      <object type="MenuButton" x="88" y="338" width="400" height="100" textureID="ExitButton" callbackID="1" />
